# Signature AI Training Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# S3 Configuration
S3_PUBLIC_BASE_URL=https://your-bucket.s3.us-east-1.amazonaws.com
S3_USE_PRESIGNED_GET=false

# =============================================================================
# GPU TRAINING CONFIGURATION
# =============================================================================
# AWS GPU Instance Settings
AWS_GPU_INSTANCE_TYPE=g4dn.xlarge
AWS_GPU_AMI_ID=ami-0c02fb55956c7d316
AWS_KEY_NAME=gpu-training-key
AWS_SECURITY_GROUP_ID=sg-xxxxxxxxx
AWS_SUBNET_ID=subnet-xxxxxxxxx
AWS_IAM_INSTANCE_PROFILE=EC2-S3-Access

# Optional: Reuse existing instance
AWS_GPU_EXISTING_INSTANCE_ID=

# GitHub repository for training code (if using custom repo)
AWS_GPU_GITHUB_REPO=https://github.com/your-repo/ai-training.git

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_IMAGE_SIZE=224
MODEL_BATCH_SIZE=16
MODEL_EPOCHS=50
MODEL_LEARNING_RATE=0.0001
MODEL_FINE_TUNE_EPOCHS=10

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================
MIN_GENUINE_SAMPLES=3
MIN_FORGED_SAMPLES=0
MAX_TRAINING_TIME=3600

# =============================================================================
# VERIFICATION SETTINGS
# =============================================================================
DEFAULT_SIMILARITY_THRESHOLD=0.7
USE_ADAPTIVE_THRESHOLD=false
CONFIDENCE_THRESHOLD=0.6
ENABLE_FORGERY_DETECTION=false
ENABLE_ANTISPOOFING=false
SPOOFING_THRESHOLD=0.6

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
LOCAL_MODELS_DIR=./models
SUPABASE_BUCKET=models
USE_LOCAL_STORAGE=false

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=INFO

# =============================================================================
# MODEL VERSIONING
# =============================================================================
ENABLE_MODEL_VERSIONING=true
MAX_MODEL_VERSIONS=5

# =============================================================================
# CPU OPTIMIZATION (for local development)
# =============================================================================
USE_CPU_OPTIMIZATION=true
CPU_THREADS=6